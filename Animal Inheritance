#include <iostream>
#include <string>
using namespace std;
class Mammal {

string name = "";
public:
int tail=1;
int legs=4;
int teeth=42;
int beak=0;
};

class Dog : public Mammal {
public:
void voiceSound()
{
cout << "Barks";
}
};

int main() {

Dog dog;
cout << "Dog has " << dog.legs << " legs." << endl;
cout << "Dog has " << dog.tail << " tail." << endl;
cout << "A dog has " << dog.teeth << " teeth." << endl;
cout << "A dog has " << dog.beak << " beak." << endl;

cout << "Dog ";
dog.voiceSound();
return 0;
}
